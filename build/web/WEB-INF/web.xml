<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CAcceso</servlet-name>
        <servlet-class>controlador.CAcceso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CValidar</servlet-name>
        <servlet-class>controlador.CValidar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CControlador</servlet-name>
        <servlet-class>controlador.CControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cempleado</servlet-name>
        <servlet-class>controlador.CEmpleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CTipoDocumento</servlet-name>
        <servlet-class>controlador.CTipoDocumento</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CAcceso</servlet-name>
        <url-pattern>/CAcceso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CValidar</servlet-name>
        <url-pattern>/CValidar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CControlador</servlet-name>
        <url-pattern>/CControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cempleado</servlet-name>
        <url-pattern>/Cempleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CTipoDocumento</servlet-name>
        <url-pattern>/CTipoDocumento</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
